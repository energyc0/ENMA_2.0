var a = 0;
var b = 0;

func main(){

    println("globals: ");

    println(a++);
    println(++a);
    a = a++;
    println(a);
    a = ++a;
    println(a);


    println(b--);
    println(--b);
    b = --b;
    println(b);
    b = b--;
    println(b);

    {
        println("locals: ");
        var a = 0;
        println(a++);
        println(++a);

        a = a++;
        println(a);
        a = ++a;
        println(a);

        var b = 0;
        println(b--);
        println(--b);

        b = --b;
        println(b);
        b = b--;
        println(b);
    }
}